<%- include("partials/header") -%>

<h3 id="transactionHeading">Welcome to Transfer Window</h3>

<form id="transferForm" action="succes/<%= name %>" method="post">
  <div class="form-group">
    <label for="">Name of sender:</label><br>
    <input type="text" name="sender" value="<%= name %>"><br>
  </div>
  <div class="form-group">
    <label for="amount">Enter the amount of money:</label><br>
    <input type="text" name="money" value="" autocomplete="off">
  </div>
  <div class="form-group">
    <label for="bankers">Choose the receipient</label><br>
    <select name="receipient" data-style="btn-info" class="rcpt form-control col-xs-3">
      <option value="Debarchan">Debarchan</option>
      <option value="Joey">Joey</option>
      <option value="Phoebe">Phoebe</option>
      <option value="Chandler">Chandler</option>
      <option value="Ross">Ross</option>
      <option value="Monica">Monica</option>
      <option value="Rachel">Rachel</option>
      <option value="Janice">Janice</option>
      <option value="Ben">Ben</option>
      <option value="Richard">Richard</option>
    </select>
  </div>
  <br><br>
  <button type="submit" class="btn btn-primary" name="button">Send Money</button>

</form>


<%- include("partials/footer") -%>
